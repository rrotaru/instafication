{
  "name": "Instant",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A Chrome extension for getting things sooner with Postmates",
  "homepage_url": "http://instafication-api.herokuapp.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "View your schedules deliveries",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "geolocation",
    "storage"
  ],
  "web_accessible_resources": [
    "icons/*.png",
    "icons/*.svg",
    "icons/*.gif"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>" 
      ],
      "css": [
        "src/inject/jquery-ui.css",
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://*.google.com/*"
      ],
      "js": [
        "src/inject/jquery.js",
        "src/inject/jquery-ui.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
